{
  system.defaults.dock = {
    appswitcher-all-displays = true; # show app switcher across all displays
    autohide = true;
    show-recents = false; # don't showrecent apps in the dock
    tilesize = 48;

    # apps pinned to the dock
    persistent-apps = [];

    # disable all hot corners
    wvous-bl-corner = 1;
    wvous-br-corner = 1;
    wvous-tl-corner = 1;
    wvous-tr-corner = 1;
  };
}
